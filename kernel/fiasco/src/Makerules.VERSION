# -*- makefile -*-
# vim:set ft=make:

kip.o:		$(VERSION)

$(VERSION): FORCE
		$(VERBOSE)if [ -d $(srcdir)/.svn ]; then           \
		   v=`svnversion -nc $(srcdir)`; v=$${v%[A-Z]};    \
		   echo "#define CODE_VERSION \"r$${v#*:}\"" > $@; \
		else                                               \
		   echo "#define CODE_VERSION \"rUNKNOWN\"" > $@;  \
		fi

clean-VERSION:
		rm -f $(VERSION)
