#
# Makefile for sources of names server
#

PKGDIR  	?= ../..
L4DIR   	?= $(PKGDIR)/../..

TARGET			= $(PKGNAME)
DEFAULT_RELOC_x86	= 0x00240000
DEFAULT_RELOC_arm	= 0x00100000
#MODE			= sigma0_diet
MODE			= sigma0
SERVERIDL		= names.idl

PRIVATE_INCDIR		= $(PKGDIR)/server/include

all::
include		../Makeconf.bid.local
Makefile.inc: ../Makeconf.bid.local

SRC_C		+= names.c predefined.c

ifeq ($(ARCH),x86)
LIBS		+= -llogserver
endif

ifeq ($(CONFIG_EVENT),y)
SRC_C		+= events.c
LIBS		+= -levents -ll4util -lnames
endif
