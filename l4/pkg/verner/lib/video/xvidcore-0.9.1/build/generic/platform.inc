# ============================================================================
# Activated features
# ============================================================================

FEATURES=

# ============================================================================
# Architecture dependant things
# ============================================================================

ARCHITECTURE=-DARCH_IS_IA32
BUS=-DARCH_IS_32BIT
ENDIANNESS=-DARCH_IS_LITTLE_ENDIAN
SHARED_EXTENSION=so
STATIC_EXTENSION=a
OBJECT_EXTENSION=o

# ============================================================================
# Compiler
# ============================================================================

CC=gcc
SPECIFIC_CFLAGS=-fPIC
CFLAGS=-Wall -O2 -fomit-frame-pointer -ffast-math -funroll-loops -fschedule-insns -fschedule-insns2

# ============================================================================
# Assembler
# ============================================================================

AS=nasm
AFLAGS=-I$(<D) -f elf 
ASSEMBLY_EXTENSION=asm

# ============================================================================
# Linker
# ============================================================================

SPECIFIC_LDFLAGS=-shared -lc -lm
RANLIB=ranlib

# ============================================================================
# Installation
# ============================================================================

INSTALL=/usr/bin/install -c
prefix=/usr/local
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

# ============================================================================
# Sources
# ============================================================================

GENERIC_SOURCES=$(SRC_GENERIC)
DIVX4COMPAT_SOURCES=$()
ASSEMBLY_SOURCES=$(SRC_IA32)
DCT_IA64_SOURCES=$()
GENERIC_OBJECTS=$(SRC_GENERIC:.c=.o)
DIVX4COMPAT_OBJECTS=$(:.c=.o)
ASSEMBLY_OBJECTS=$(SRC_IA32:.asm=.o)
DCT_IA64_OBJECTS=$(:.asm=.o)
